@model ControlObjetorPerdidos.Topicos.DataBase.TArticulo
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Articulo</h2>

@using (Html.BeginForm())
{
